<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %>
<body>
    <nav class="navbar bg-light mb-4">
        <div class="container-fluid d-flex justify-content-between align-items-center px-4">
            <a class="navbar-brand" href="/">Movie Checker</a>
            <div>
                <a class="nav-link d-inline px-2" href="/">Home</a>
                <a class="nav-link d-inline px-2" href="/admin">Admin</a>
                <a class="nav-link d-inline px-2" href="/logs">Logs</a>
            </div>
        </div>
    </nav>
    <div id="main" class="container px-3">
        <div class="form-div mb-4">
            <form method="post">
                <div class="form-div mb-4">
                <label class="form-label me-2">Movie Name:</label>
                <input type="text" class="form-control mb-2" name="name" value="<%= movieData.name %>"/>
                </div>
                <div class="form-div mb-4">
                <label class="form-label me-2">Location:</label>
                <input type="text" class="form-control mb-2" name="location" value="<%= movieData.location %>"/>
                </div>
                <div class="form-div mb-4">
                <label class="form-label me-2">Letter:</label>
                <input type="text" class="form-control mb-2" name="letter" value="<%= movieData.letter %>"/>
                </div>
                <div class="form-div mb-4">
                <label class="form-label me-2">Category:</label>
                <input type="text" class="form-control mb-2" name="category" value="<%= movieData.category %>"/>
                </div>
                <div class="form-div mb-4">
                <label class="form-label me-2">Main Actors_Actresses:</label>
                <input type="text" class="form-control mb-2" name="main_actors_actresses" value="<%= movieData.main_actors_actresses %>"/>
                </div>
                <input type="hidden" name="id" value="<%= movieData.id %>">
                <button id="add" class="btn btn-outline-primary" formaction="/update-current-movie">Update</button>
                <% if(locals.response) {%>
                    <h5 id="add-response"><%= response %></h5>
                <% }else { %>
                    <h5 id="add-response"></h5>
                <% } %>
            </form>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
</html>